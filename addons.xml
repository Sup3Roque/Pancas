<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.pancas"
       name="PancasTV"
       version="1.1.1"
       provider-name="Pancas">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.beautifulsoup" version="3.2.1"/>
    <import addon="script.module.simple.downloader" version="0.9.4"/>
    <import addon="script.module.beautifulsoup4" />
    <import addon="script.module.requests" />
    <import addon="script.module.httplib2" />
    <import addon="script.module.youtube.dl" optional="true"/>
    <import addon="plugin.video.youtube" optional="true" />
    <import addon="script.module.urlresolver" optional="true"/>
    <import addon="script.module.simplejson" />
     <import addon="script.module.livestreamer" optional="true"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>TV para todos</summary>
    <description>
        Uma televisão ao clique de um dedo.

    </description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.pancas" name="Pancas repository" version="1.0.4" provider-name="Pancas">
	<extension point="xbmc.addon.repository" name="Pancas Add-on Repository">
		<info compressed="false">http://raw.github.com/Sup3Roque/Pancas/master/addons.xml</info>
		<checksum>http://raw.github.com/Sup3Roque/Pancas/master/addons.xml.md5</checksum>
		<datadir zip="true">http://raw.github.com/Sup3Roque/Pancas/master/repo/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Pancas Repo</summary>
		<description>TV para todos sempre ao melhor preço</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
