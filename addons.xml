<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.pancas"
       name="Pancas"
       version="1.0"
       provider-name="Mario">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Pancas</summary>
    <description lang="en">Ver TV-Mundial</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.pancas" name="Pancas" version="1.0" provider-name="Mario">
	<extension point="xbmc.addon.repository" name="Pancas">
		<info compressed="false">http://github.com/Sup3Roque/Pancas/raw/master/addons.xml</info>
		<checksum>http://github.com/Sup3Roque/Pancas/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">http://github.com/Sup3Roque/pancas/raw/master/zips</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Pancadas TV</summary>
		<description>Televisao Portuguesa e que mais</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
